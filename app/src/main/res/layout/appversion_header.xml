<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appversions_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-4dp"
    android:layout_marginRight="-4dp"
    android:layout_marginTop="-4dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/appBackgrond"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@color/blue" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:background="@android:color/transparent" />

        </FrameLayout>


        <RelativeLayout
            android:id="@+id/appLayout"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="bottom"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/appIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="-16dp"
                tools:text="F"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:background="@drawable/roundrect" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appIcon"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="Facebook"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/appVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/appName"
                android:layout_below="@+id/appName"
                android:text="Version 1.0.0"
                android:textColor="#3E3E3E"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/appCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/appVersion"
                android:layout_alignTop="@+id/appVersion"
                android:layout_below="@+id/appVersion"
                android:layout_marginLeft="4sp"
                android:layout_toRightOf="@+id/appVersion"
                android:gravity="center"
                android:text="(388)"
                android:textColor="#6e6e6e"
                android:textSize="12sp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="12dp"
                android:text="install"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:backgroundTint="@color/colorPrimary" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>